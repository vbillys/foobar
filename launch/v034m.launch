<launch>
  <group ns="camera">
    <node pkg="libuvc_camera" type="camera_node" name="mycam">
      <!-- Parameters used to find the camera -->
      <param name="vendor" value="0x2a0b"/><!-- "0x0" -->
      <param name="product" value="0x00f7"/><!-- "0x0" -->
      <param name="serial" value="3"/>
      <!-- If the above parameters aren't unique, choose the first match: -->
      <param name="index" value="1"/>

      <!-- Image size and type -->
      <param name="width" value="640"/>
      <param name="height" value="480"/>
      <!-- choose whichever uncompressed format the camera supports: -->
      <param name="video_mode" value="uncompressed"/> <!-- uncompressed or yuyv/nv12/jpeg -->
      <param name="frame_rate" value="60"/>

      <!--<param name="timestamp_method" value="start"/>--> <!-- start of frame -->
      <param name="camera_info_url" value="file:///tmp/cam.yaml"/>

      <!--<param name="auto_exposure" value="2"/>--> <!-- use aperture_priority auto exposure -->
      <!--<param name="auto_white_balance" value="false"/>-->
    </node>
  </group>
</launch>
